import java.util.Scanner;

public class d489 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner scan = new Scanner(System.in);
		while (scan.hasNext()) {
			int a = scan.nextInt();
			int b = scan.nextInt();
			int c = scan.nextInt();
			double s = 0.5 * (a + b + c);
			System.out.printf("%.0f%n", s * (s - a) * (s - b) * (s - c));
		}
	}

}
